div(attributes=$helpers.getButtonAttrs() class={
  'mp-button-container': true,
  [$component.className]: true,
  'mp-button-with-icon': !!$component.getAttribute('icon'),
})
  .mp-button-content
    if $component.getAttribute('icon')
      svg-icon(attributes={icon: $component.getAttribute('icon')})
    content
    if $component.isAttributeEnabled('arrow-next')
      .mp-button-arrow-next
        include ./arrow.svg
