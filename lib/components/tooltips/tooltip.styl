@import '../../../stylesheets/common'

.wrapper
  &.hidden
    pointer-events none
    .mp-tooltip
      display none

.mp-tooltip
  align-items center
  background-color: grey-900
  border-radius 3px
  color #fff
  cursor default
  display flex
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  font-size 12px
  font-weight bold
  line-height 9px
  justify-content center
  padding 8px
  pointer-events auto
  position absolute
  text-transform initial
  &::after
    border 5px solid transparent
    border-top-color grey-900
    content ""
    height 0
    left 50%
    margin-left: -5px
    position absolute
    top 100%
    width 0
