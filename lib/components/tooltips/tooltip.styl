@import '../../../stylesheets/common'

.wrapper
  &.hidden
    pointer-events none
    .mp-tooltip
      display none

.hidden-background
  opacity 0
  position absolute

.mp-tooltip
  background-color: grey-900
  border-radius 3px
  color #fff
  cursor default
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  font-size 10px
  font-weight bold
  pointer-events none
  padding 5px 8px
  position absolute
  text-transform initial
