@import '../../stylesheets/defaults'

+host-styles('mp-spinner')
  height 22px
  width 22px

.mp-spinner
  width 100%
  height 100%
  svg-icon-style(base-color: mp-blue, size: 100%)
  transform translateZ(0)
  animation spin 0.7s infinite linear

@keyframes spin
  0%
    transform rotate(0deg)

  100%
    transform rotate(360deg)
