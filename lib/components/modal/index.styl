@import '../../stylesheets/defaults'

@keyframes fadeOverlayIn
  from
    opacity 0
  to
    opacity 0.8

@keyframes fadeOverlayOut
  from
    opacity 0.8
  to
    opacity 0

@keyframes fadeModalIn
  from
    transform scale(1.1, 1.1)
    opacity 0
  to
    transform scale(1, 1)
    opacity 1

@keyframes fadeModalOut
  from
    transform scale(1, 1)
    opacity 1
  to
    transform scale(1.1, 1.1)
    opacity 0

+host-styles(mp-modal)
  position absolute
  width 400px
  z-index z-modal

+prefix-classes('mp-modal-')
  .stage, .stage *
    box-sizing border-box

  .stage
    bottom 0
    left 0
    min-width 100%
    pointer-events none
    position fixed
    right 0
    top 0
    width inherit

    &.closed
      display none

    &.absolute
      &, .backdrop, .wrapper
        position absolute

    .backdrop
      background grey-900
      height 100%
      position fixed
      pointer-events auto
      width 100%

      &.opening
        animation fadeOverlayIn 300ms forwards
        opacity 0

      &.open
        opacity 0.8

      &.closing
        animation fadeOverlayOut 300ms forwards

      &.closed
        opacity 0

    .backdrop + .wrapper
      .main
        box-shadow 0px 17px 50px 0px alpha(black,0.19)

    .wrapper
      align-items center
      display flex
      height 100%
      justify-content center
      min-width 100%
      pointer-events none
      position fixed
      width inherit

      .main
        background #fff
        border 1px solid grey-100
        border-radius 5px
        box-shadow 0px 1px 2px 0px alpha(black,0.14)
        pointer-events auto
        position relative
        width inherit
        z-index 2

        &.opening
          animation fadeModalIn 300ms forwards 100ms
          opacity 0

        &.open
          opacity 1

        &.closing
          animation fadeModalOut 200ms forwards

        &.closed
          opacity 0

        .close-btn
          cursor pointer
          float right
          height 10px
          position absolute
          right 15px
          top 15px

          .close-icon svg
            width 10px
            path
              fill grey-200

          &:hover
            .close-icon svg path
              fill grey-300

  +content-styles()
    .content
      padding 15px 30px

    .title
      color grey-900
      font-family family-helvetica
      font-size-xl()
      font-weight weight-bold
      line-height 1.4

    .subtitle
      font-paragraph()
      margin 12px 0
