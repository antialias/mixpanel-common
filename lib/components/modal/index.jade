- const notFullScreen = $component.isAttributeEnabled('not-fullscreen');
- const topPos = notFullScreen ? $component.getAttribute('top-position') : '';
- const leftPos = notFullScreen ? $component.getAttribute('left-position') : '';
.mp-modal-stage(
  class={
  'mp-modal-absolute': notFullScreen,
  'mp-modal-closed': visibility === 'closed',
  }
  on={click: e => e.stopPropagation()}
)
  if $helpers.getType() === 'modal'
    .mp-modal-backdrop(
      class={[`mp-modal-${visibility}`]: true}
      on={click: $helpers.backdropClicked}
    )
  .mp-modal-wrapper
    .mp-modal-main(
        class={[`mp-modal-${visibility}`]: true}
        style={top: `${topPos}`, left: `${leftPos}`}
      )
      if $component.isAttributeEnabled('closeable')
        .mp-modal-close-btn(on={click: $helpers.closeClicked})
          .mp-modal-close-icon
            include ./close.svg
      content
