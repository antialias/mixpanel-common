@import '../../../stylesheets/common'

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

@keyframes fadeInAndScale
  from
    transform scale(1.1, 1.1)
    opacity 0
  to
    transform scale(1, 1)
    opacity 1

@keyframes fadeOutAndScale
  from
    transform scale(1, 1)
    opacity 1
  to
    transform scale(1.1, 1.1)
    opacity 0

.mp-modal
  bottom 0
  box-sizing border-box
  left 0
  pointer-events none
  position fixed
  right 0
  top 0
  z-index 10

  &.absolute
    &, backdrop, .modal-container
      position absolute

  .backdrop
    animation fadeIn 200ms forwards
    background #45566d
    height 100%
    opacity 0.9
    position fixed
    pointer-events auto
    width 100%
    z-index 1

    &.closing
      animation-name fadeOut

  .modal-container
    display flex
    height 100%
    justify-content center
    align-items center
    pointer-events none
    position fixed
    width 100%
    z-index 2

    .modal
      animation fadeInAndScale 200ms forwards
      border-radius 6px
      box-shadow 0 1px 3px 0 rgba(1, 1, 1, 0.28)
      max-width 530px
      pointer-events auto
      position relative
      z-index 2

      &.closing
        animation-name fadeOutAndScale

      .close-btn
        cursor pointer
        float right
        height 10px
        position absolute
        right 15px
        top 15px

        .close-icon svg
          width 10px
          .x
            fill grey-200

        &:hover
          .close-icon svg .x
            fill grey-300

  // keep these styles as general as possible to make them easier to override
  // i.e. don't indent them further
  .top-container
    background #fff
    border-radius 6px 6px 0 0
    padding 30px 60px
    text-align center

  content::content
    .mp-modal-title
      font-title()

    .mp-modal-subtitle
      font-subtitle()
      margin 20px 0
