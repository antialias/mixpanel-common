@import '../../../stylesheets/common'

.mp-modal
  bottom 0
  box-sizing border-box
  left 0
  position fixed
  right 0
  top 0
  z-index 10

  .backdrop
    background #45566d
    height 100%
    opacity 0.9
    position fixed
    pointer-events auto
    width 100%
    z-index 1

  .modal-container
    display flex
    height 100%
    justify-content center
    align-items center
    pointer-events none
    position fixed
    width 100%
    z-index 2

    .modal
      border-radius 6px
      box-shadow 0 1px 3px 0 rgba(1, 1, 1, 0.28)
      max-width 530px
      pointer-events auto
      position relative
      z-index 2

      .close-btn
        cursor pointer
        float right
        height 12px
        position absolute
        right 15px
        top 15px

        .close-icon svg
          width 12px
          .x
            fill grey-200

        &:hover
          .close-icon svg .x
            fill grey-300

  // keep these styles as general as possible to make them easier to override
  // i.e. don't indent them further
  .top-container
    background #fff
    border-radius 6px 6px 0 0
    padding 30px 60px
    text-align center

  content::content
    .mp-modal-title
      font-title()

    .mp-modal-subtitle
      font-subtitle()
      margin 20px 0
