@import '../../stylesheets/defaults'

+prefix-classes('mp-confirm-')
  .container, .container *
    box-sizing border-box

  .container
    display flex
    flex-direction column

    .body
      display flex
      flex-direction row
      text-align left
      min-height 92px
      padding 15px 30px 0 20px

      .icon
        width 22px
        svg-icon-style(mp-red, size: 22px)

      .copy
        margin-left 6px

    .buttons
      border-top 1px solid grey-200
      margin-top 15px
      padding 15px 20px 15px 0
      text-align right

      mp-button
        margin-left 15px

    +content-styles()
      .title
        color grey-900
        font-size-large()
        font-weight weight-bold
        line-height 1.4
        margin-bottom 10px

      .description
        font-paragraph()
