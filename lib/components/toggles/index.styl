@import '../../../stylesheets/common'

.mp-toggle
  background-color grey-100
  border-radius 50px
  display flex
  padding 2px

  .mp-toggle-option
    align-items center
    background-color grey-100
    border-radius 50px
    color grey-700
    display flex
    flex-grow 1
    font-size 11px
    font-weight bold
    height 40px
    justify-content center
    text-align center
    text-transform uppercase
    &.mp-toggle-selected
      background-color #fff
    &:not(.mp-toggle-selected)
      cursor pointer
      &:hover
        color blue-300
