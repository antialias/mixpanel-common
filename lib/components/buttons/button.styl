@import '../defaults'

//TODO: refactor and remove
background-primary-modal = blue-300
background-primary-modal-hover = blue-100

active = '&:active,&[active]'
disabled = '&:disabled,&[disabled]'
not-disabled = ':not([disabled]):not(:disabled)'

content-color(color)
  +content-styles()
    color color
    svg-icon
      svg, path
        color color
        fill color
        transition 0s

icon-size(size=none, pos-left=0, pos-top=0)
  svg
    if size != none
      height size
      min-height size
      min-width size
      width size
    left pos-left
    top pos-top

+host-styles(mp-button)
  height 44px

+host-styles(mp-button, '.mp-button-modal')
   width 100%

+prefix-classes('mp-button-')
  .container
    align-items center
    border 1px solid
    border-radius 5px
    box-shadow 0px 1px 1px 0px rgba(0,0,0,0.2)
    box-sizing border-box
    cursor pointer
    display inline-flex
    height 100%
    flex 1
    font-family family-helvetica
    font-size-medium()
    font-weight weight-bold
    justify-content center
    letter-spacing 0
    overflow hidden
    padding 0px 25px
    text-align center
    user-select none

    *
      vertical-align middle

    .text
      align-items center
      display inline-flex
      line-height 18px
      overflow hidden
      justify-content center

      .arrow-next
        margin-left 10px
        width 15px
        svg path
          fill #fff

    +content-styles()
      svg-icon
        margin-right 6px

    {disabled}
      box-shadow none
      cursor default
      .text
        opacity 0.6


    /* BEGIN COLOR THEMES */

    &.primary, &.blue
      background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
      border-color blue-500
      content-color(white)

      &:hover{not-disabled}
        background-image linear-gradient(0deg, blue-100 0%, blue-100 100%)
        box-shadow 0 1.5px 2.5px 0 rgba(0,0,0,0.3)

      &:active{not-disabled}, &.active{not-disabled}
        background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
        border-color mp-blue
        box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)
        content-color(rgba(255,255,255,0.6))

      &.on-blue
        border-color blue-900
        box-shadow none

        &:hover{not-disabled}
          background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
          box-shadow 0px 1px 1px 0px rgba(0,0,0,0.2)

        &:active{not-disabled}, &.active{not-disabled}
          border-color blue-700
          box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)

    &.secondary, &.grey
      background-image linear-gradient(0deg, grey-50 0%, white 100%)
      border-color grey-300
      box-shadow 0px 1px 1px 0px rgba(0,0,0,0.1)
      content-color(grey-700)

      &:hover{not-disabled}
        background-image linear-gradient(0deg, white 0%, white 100%)
        box-shadow 0 1px 2px 0 rgba(0,0,0,0.23)
        content-color(mp-blue)

      &:active{not-disabled}, &.active{not-disabled}
        border-color grey-200
        box-shadow 0px 1px 0px 0px grey-150, inset 0px 2px 3px 0px grey-200
        content-color(rgba(110,133,157,0.8))

      &.on-blue
        background-image none
        background-color transparent
        border-color rgba(0,0,0,0)
        box-shadow none
        content-color(white)

        &:hover{not-disabled}
          background-image none
          box-shadow none
          border-color rgba(255,255,255,0.6)
          content-color white

        &:active{not-disabled}, &.active{not-disabled}
          background-color mp-blue
          border 1px solid rgba(255,255,255,0.3)
          box-shadow 0px 1px 0px 0px mp-blue, inset 0px 2px 3px 0px blue-500
          content-color(rgba(255,255,255,0.6))

    &.red
      background-image linear-gradient(0deg, mp-red 0%, red-300 100%)
      border-color red-700
      content-color(white)

      &:hover{not-disabled}
        background-image linear-gradient(0deg, red-300 0%, red-300 100%)

      &:active{not-disabled}, &.active{not-disabled}
        background-image linear-gradient(0deg, mp-red 0%, red-300 100%)
        box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)
        content-color(rgba(255,255,255,0.6))

    // deprecated
    &.purple
      background mp-purple
      border 1px solid #7858b8
      color #fff

      &:hover{not-disabled}
        background #A081EA
        border 1px solid #9270e2

    /* END COLOR THEMES */


    /* ICON STYLES */

    +content-styles()
      svg-icon
        &[icon='x']
          margin-right 2px

        &[icon='plus']
          icon-size(size: 30px, pos-top: -4px)

        &[icon='caret-up'], &[icon='caret-down']
          margin-right 2px

    /* END ICON STYLES */


    /* BEGIN SPECIAL STYLES FOR MODAL BUTTONS */

    &.modal
      background-image none
      border-radius 0 0 6px 6px
      border none
      color #fff
      font-size 15px
      font-weight bold
      height 60px
      letter-spacing .7px
      padding 0
      display flex
      text-transform none
      transition background 200ms

      &:hover{not-disabled}
        border none

      &.primary, &.blue
        background background-primary-modal
        box-shadow inset 0 1px 0 0 #3b99f0

        &:hover{not-disabled}
          background background-primary-modal-hover

      &.purple
        box-shadow inset 0 1px 0 0 #7858b8

    /* END SPECIAL STYLES FOR MODAL BUTTONS */
