json('../../../stylesheets/colors.json')
@import '../../../stylesheets/typography'

background-primary = blue-300 linear-gradient(to bottom, #50AEFF, #46A2FF)
background-primary-hover = blue-100 linear-gradient(#73bdff, #65b3ff)
background-primary-modal = blue-300
background-primary-modal-hover = blue-100
background-primary-on-blue = blue-300 linear-gradient(to bottom, #7fc1ff, #6fb9ff)
background-primary-on-blue-hover = blue-100 linear-gradient(#8cc7ff, #7bbfff)
background-primary-red = mp-red linear-gradient(#EA8499, #E4687D)
background-primary-red-hover = mp-red linear-gradient(to bottom, #ED92A4, #EA8499)

active = '&:active,&[active]'
disabled = '&:disabled,&[disabled]'
not-disabled = ':not([disabled]):not(:disabled)'

+prefix-classes('mp-button-')
  .container
    align-items center
    border 1px solid
    border-radius 4px
    box-shadow 0px 1px 1px 0px rgba(0,0,0,0.2)
    box-sizing border-box
    cursor pointer
    display inline-flex
    flex 1
    font-family family-helvetica
    font-size-medium()
    font-weight weight-bold
    justify-content center
    letter-spacing 0
    line-height 14px
    padding 15px 25px 13px 25px
    text-align center
    text-transform uppercase
    user-select none

    .text
      display inline-flex
      align-items center
      justify-content center

      .arrow-next
        margin-left: 10px;
        width: 15px;
        svg path
          fill #fff

    {disabled}
      box-shadow none
      cursor default
      .text
        opacity 0.6


    /* BEGIN COLOR THEMES */

    &.primary, &.blue
      background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
      border-color blue-500
      color white

      &:hover{not-disabled}
        background-image linear-gradient(0deg, blue-100 0%, blue-100 100%)
        box-shadow 0 1.5px 2.5px 0 rgba(0,0,0,0.3)

      &:active{not-disabled}
        background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
        border-color mp-blue
        box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)
        color rgba(255,255,255,0.6)

      &.on-blue
        border-color blue-900
        box-shadow none

        &:hover{not-disabled}
          background-image linear-gradient(0deg, mp-blue 0%, blue-100 100%)
          box-shadow 0px 1px 1px 0px rgba(0,0,0,0.2)

        &:active{not-disabled}
          border-color blue-700
          box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)

    &.secondary, &.grey
      background-image linear-gradient(0deg, grey-50 0%, white 100%)
      border-color grey-300
      box-shadow 0px 1px 1px 0px rgba(0,0,0,0.1)
      color grey-700

      &:hover{not-disabled}
        background-image linear-gradient(0deg, white 0%, white 100%)
        box-shadow 0 1px 2px 0 rgba(0,0,0,0.23)
        color mp-blue

      &:active{not-disabled}
        border-color grey-200
        box-shadow 0px 1px 0px 0px grey-150, inset 0px 2px 3px 0px grey-200
        color rgba(110,133,157,0.8)

      &.on-blue
        background-image none
        background-color transparent
        border-color rgba(0,0,0,0)
        box-shadow none
        color white

        &:hover{not-disabled}
          background-image none
          box-shadow none
          border-color rgba(255,255,255,0.6)
          color white

        &:active{not-disabled}
          background-color mp-blue
          border 1px solid rgba(255,255,255,0.3)
          box-shadow 0px 1px 0px 0px mp-blue, inset 0px 2px 3px 0px blue-500
          color rgba(255,255,255,.6)

    &.red
      background-image linear-gradient(0deg, mp-red 0%, red-300 100%)
      border-color red-700
      color white

      &:hover{not-disabled}
        background-image linear-gradient(0deg, red-300 0%, red-300 100%)
    
      &:active{not-disabled}
        background-image linear-gradient(0deg, mp-red 0%, red-300 100%)
        box-shadow 0px 1px 1px 0px rgba(0,0,0,0.0), inset 0px 2px 2px 0px rgba(0,0,0,0.2)
        color rgba(255,255,255,0.6)
    
    // deprecated
    &.purple 
      background mp-purple
      border 1px solid #7858b8
      color #fff

      &:hover{not-disabled}
        background #A081EA
        border 1px solid #9270e2

    /* END COLOR THEMES */


    /* BEGIN SPECIAL STYLES FOR MODAL BUTTONS */

    &.modal
      background-image none
      border-radius 0 0 6px 6px
      border none
      color #fff
      font-size 15px
      font-weight bold
      height 60px
      letter-spacing .7px
      padding 0
      display flex
      text-transform none
      transition background 200ms

      &:hover{not-disabled}
        border none

      &.primary, &.blue
        background background-primary-modal
        box-shadow inset 0 1px 0 0 #3b99f0

        &:hover{not-disabled}
          background background-primary-modal-hover

      &.purple
        box-shadow inset 0 1px 0 0 #7858b8

    /* END SPECIAL STYLES FOR MODAL BUTTONS */
