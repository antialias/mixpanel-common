@import '../../stylesheets/defaults'

+host-styles(mp-drop-menu)
  border-radius 5px
  display flex
  width 340px

+prefix-classes('mp-tag-selector-')
  .container
    border-radius inherit
    width 100%

    &, *
      box-sizing border-box

    .top-input-wrapper
      margin 0 auto
      margin-bottom 20px
      padding 0 20px

      .input-wrapper
        align-items center
        cursor text
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content flex-start
        min-height 36px
        padding 6px 6px 0px
        position relative
        width 300px

        mp-tag
          margin 0 0 6px 4px
          opacity 0
          white-space nowrap
          transition all 0.25s

          &.tag-in
           opacity 1

          &.tag-out
            opacity 0

        .border
          border 1px solid grey-200
          border-radius 3px
          height 100%
          left 0
          pointer-events none
          position absolute
          top 0
          transition border-color 0.25s
          width 100%

          &.error
            border-color mp-red

        &:active .border
          border-color mp-blue

        .search-input
          background-color transparent
          border 0
          font-family family-helvetica
          font-size-default()
          font-weight weight-regular
          height auto
          line-height 1.5
          margin-left 6px
          margin-bottom 7px
          min-width 0
          max-width 100%
          padding 0

          &:focus + .border:not(.loaded-error)
            border-color mp-blue

    .hr
      background-color grey-200
      height 1px
      width 100%

    .tag-list
      max-height 280px
      overflow-y auto

      mp-list-item
        margin-left 12px
        margin-right 12px

    .footer
      box-sizing border-box
      cursor pointer
      display flex
      flex-direction row
      flex-wrap wrap
      font-size-medium()
      font-weight weight-bold
      justify-content center
      max-width 100%
      padding 14px 20px
      width 100%
      word-wrap break-word

      &:hover
        background-color grey-100

      .copy
        align-self center
        color blue-700
        white-space pre

      .label-name
        align-self center
        color grey-900
        max-width 100%
        word-wrap break-word

  .search-input-dummy
    font-family family-helvetica
    font-size-default()
    font-weight weight-regular
    padding 0
    position absolute
    white-space nowrap
    visibility hidden

