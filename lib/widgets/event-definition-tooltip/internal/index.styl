@import '../../../stylesheets/defaults'

+host-styles('mp-event-definition-tooltip-internal')
  display block
  position absolute
  z-index $z-tooltip

+prefix-classes('mp-event-definition-')
  .wrapper
    position relative

  .tooltip
    background-color white
    border-radius 5px
    box-shadow 0 1px 30px 0 alpha(black, 0.19)
    opacity 0
    position absolute
    transform translateX(-10px)
    width 340px

    &.in
      opacity 1
      transform translateX(0)
      transition all (mp-fast)ms ease-out-quart

    &.out
      opacity 0
      transform translateX(-10px)
      transition all (mp-fast)ms ease-in-quart

    .container
      padding 20px 20px 12px

      .name
        color grey-700
        font-size-default()
        font-weight weight-bold

      .description
        color grey-500
        font-size-small()
        margin-top 10px

      .verified
        display flex
        margin-top 16px

        .verified-icon
          align-items center
          background-color mp-green
          border-radius 50%
          display flex
          height 12px
          svg-icon-style(white, size: 12px)
          width 12px

        .verified-text
          color grey-500
          font-size 11px
          margin-left 4px

    .learn-more
      border-top 1px solid grey-150
      color grey-500
      font-size 11px
      padding 10px 20px

      a
        color blue-500
