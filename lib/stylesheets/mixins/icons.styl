svg-icon-style(base-color=null, hover-color=null, speed=0.2s, size=null, pos-left=0, pos-top=0)
  svg-icon
    if size != null
      height size
      min-height size
      min-width size
      width size
    svg
      if size != null
        height size
        min-height size
        min-width size
        width size
      left pos-left
      top pos-top
    if base-color != null
      svg, path
        color base-color
        fill base-color
        transition speed
  if hover-color != null
    &:hover
      svg-icon
        svg, path
          color hover-color
          fill hover-color
