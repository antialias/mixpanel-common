@import '../../common'

background-primary = linear-gradient(#56b0ff, #4ba4ef)
background-primary-acitve = linear-gradient(#73bdff, #65b3ff)

.mp-button
  border-radius 2px
  cursor pointer
  font-family 'Helvetica Neue'
  font-size 13px
  letter-spacing 0.2px
  padding 12px 20px
  text-align center
  text-transform uppercase

  &.modal
    background background-primary
    border-radius 0 0 6px 6px
    border none
    box-shadow inset 0 1px 0 0 #3b99f0
    color #ffffff
    height 60px
    line-height @height
    padding 0
    text-transform none

    {active}
      background background-primary-acitve

  &.primary
    background background-primary
    border 1px solid #3391e9
    color #ffffff

    {active}
      background background-primary-acitve

    {disabled}
      cursor default
      .primary-text
        opacity 0.6

  &.secondary
    background-image linear-gradient(90deg, rgb(235,238,245) 1%, rgb(255,255,255) 100%)
    border 1px solid rgb(223, 230, 242)
    box-shadow 0px 1px 2px 0px rgba(0, 0, 0, 0.05), inset 0px 0px 0px 2px rgba(255, 255, 255, 0.17)
    color grey-700

    {active}
      background-image linear-gradient(90deg, rgb(235,238,245) 1%, rgb(255,255,255) 100%)
      border 1px solid rgb(210, 217, 228)
      box-shadow 0px 1px 2px 0px rgba(0, 0, 0, 0.1), inset 0px 0px 0px 2px rgba(255, 255, 255, 0.17)
