@import './common'

.mpc-button
  border-radius 2px
  cursor pointer
  font-family Helvetica Neue Bold
  font-size 13px
  padding (2 * baseline-vertical)px (1 * baseline-horizontal)px
  text-transform uppercase

  &.primary
    background linear-gradient(#56b0ff, #4ba4ef)
    border 1px solid #3391e9
    color #ffffff

    {active}
      background linear-gradient(#73bdff, #65b3ff)

    {disabled}
      cursor default
      .primary-text
        opacity 0.6

  &.secondary
    background-image linear-gradient(90deg, rgb(235,238,245) 1%, rgb(255,255,255) 100%)
    border 1px solid rgb(223, 230, 242)
    box-shadow 0px 1px 2px 0px rgba(0, 0, 0, 0.05), inset 0px 0px 0px 2px rgba(255, 255, 255, 0.17)
    color grey-700

    {active}
      background-image linear-gradient(90deg, rgb(235,238,245) 1%, rgb(255,255,255) 100%)
      border 1px solid rgb(210, 217, 228)
      box-shadow 0px 1px 2px 0px rgba(0, 0, 0, 0.1), inset 0px 0px 0px 2px rgba(255, 255, 255, 0.17)
