@import 'colors.styl'
@import 'typography.styl'
@import 'icons.styl'

content-styles()
  &
    {block}
  content::content
    {block}

host-styles(tagName, additionalSelector='')
  // apply host styles for FF, Safari, IE
  // :host doesn't work with webcomponents polyfill, so we have to use the tag name
  {tagName}{additionalSelector}
    display inline-flex
    {block}

  // since :host is a psuedo selector we need to wrap any additional selector with parens
  if additionalSelector != ''
    additionalSelector = '(' + additionalSelector + ')'

  // apply host styles
  :host{additionalSelector}
    display inline-flex
    {block}
