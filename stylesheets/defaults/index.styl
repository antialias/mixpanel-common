@import '../common.styl'
@import 'svg-icon.styl'

*
  -webkit-font-smoothing: antialiased;

*:focus
  outline 0

*::-ms-clear
  height 0
  width 0

body
  color grey-700
  font-family family-helvetica
  font-weight weight-regular
  font-size-default()
  font-stretch normal

a, .mp-link
  cursor pointer
  text-decoration none

  &, &:visited
    color blue-500

  &:hover
    color blue-300

+prefix-classes('mp-font-')
  .xl
    font-family family-helvetica
    font-size-xl()
    font-stretch normal

  .large
    font-family family-helvetica
    font-size-large()
    font-stretch normal

  .medium
    font-family family-helvetica
    font-size-medium()
    font-stretch normal

  .default
    font-family family-helvetica
    font-size-default()
    font-stretch normal

  .xs
    font-family family-helvetica
    font-size-xs()
    font-stretch normal

  .weight-bold
    font-weight weight-bold
   
  .weight-medium
    font-weight weight-medium

  .weight-regular
    font-weight weight-regular

  .paragraph
    font-paragraph()

/* FORMS */
input[type=text], textarea
  border 1px solid grey-200
  border-radius 4px
  color grey-700
  display inline-block
  font-size 13px
  font-weight 500
  transition border-color 150ms ease-out

  ::placeholder
    color grey-500 !important
    font-weight 400 !important

  &:focus
    border-color blue-700
    transition border-color 250ms ease-in
