@import '../../build/stylesheets/defaults/index.css'
@import '../../build/stylesheets/mixins/common.styl'

.section
  margin-bottom 10px
  padding-bottom 10px
  border-bottom 1px solid grey-100

  .item-palette
    display flex
    flex-flow column wrap
    &.color-palette
      height 180px
    &.icon-palette
      height 320px

  .list-block
    align-items center
    display flex
    margin 5px
    svg-icon-style(grey-900, blue-100)

    .square
      display inline-block
      vertical-align middle
      margin-right 4px
      width 20px
      height 20px

    .label
      display inline-block
      font-list-item()
      margin-left 10px
      vertical-align middle

  &.buttons
    mp-button
      margin-right 4px
      vertical-align middle

    p.button-field
      background mp-blue
      display table
      padding 10px

  &.button-bars
    .button-bar-container
      max-width 600px

  &.modals
    .modal
      width 500px
    mp-confirm
      width 480px

  &.toggles
    mp-toggle
      margin-bottom 10px
      &.inline-toggle
        width 300px
      &.full-width-toggle
        display block

    .toggle-val
      margin-left 10px

  &.menus
    .drop-menu-container
      position relative

  &.forms
    .mp-icon-input
      icon-input()

  &.widgets
    padding-bottom 500px

    .bookmarks-widget
      background-color grey-100
      border 1px solid grey-300
      display flex
      height 54px
      justify-content flex-end
      width  100%

      mp-bookmarks-widget
        border-left 1px solid grey-200
        border-right 1px solid grey-200
        margin-right 50px

    .tag-selector-container
      position relative
      .title
        padding-top 20px
        .header
          display flex
          margin-left 18px
          svg-icon-style(base-color: green-300)
          svg-icon
            margin auto 0
          .header-text
            color grey-900
            display inline-block
            font-size-large()
            font-weight weight-bold
            line-height 1.12
            margin auto 0
            padding-left 10px
        .subtext
          color mp-grey
          font-size-default()
          font-weight weight-medium
          line-height 1.5
          margin 6px 0 24px 48px
