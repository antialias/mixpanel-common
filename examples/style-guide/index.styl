@import '../../stylesheets/common.styl'

.section
  margin-bottom 10px
  padding-bottom 10px
  border-bottom 1px solid grey-100

  .color-block
    display inline-block
    margin 5px

    .square
      display inline-block
      vertical-align middle
      margin-right 4px
      width 20px
      height 20px

    .label
      display inline-block
      font-list-item()
      vertical-align middle

  &.buttons
    mp-button
      margin-right 4px

    p.button-field
      background #6cb8ff
      display table
      padding 10px
