@import '../../build/stylesheets/defaults/index.css'
@import '../../build/stylesheets/mixins/common.styl'

*
  font-smoothing antialiased
  -webkit-font-smoothing antialiased // auto prefixer not doing it's thing.
 
body
  background-color #FCFCFC // not an actual mp-color
  font-family family-helvetica
  color grey-700
  font-size-default()
  font-stretch normal
  font-weight weight-default

h1, strong, .bold
  font-weight weight-bold

a
  color grey-700
  :hover
    color blue-300

.style-guide-title
  color grey-900
  display flex
  flex-direction row
  font-size 24px
  justify-content center
  left 150px
  position relative
  position relative
  top 100px
  width calc(100% - 150px)
  
.version-bar
  background-color #FFFFFF
  border-left 1px solid grey-200
  position fixed
  top 0
  right 0
  bottom 0
  width 75px
  z-index 1000
 
.version-label
  color grey-500
  font-size-large()
  height 75px
  width 285px
  position absolute
  top 160px
  right -75px
  transform rotate(90deg)
  
  strong
    color mp-blue
  *
    display inline-block

.logo
  background url(../../assets/images/mp-logo.svg) no-repeat top center
  background-size contain
  height 90px
  margin 0 auto
  margin-left -115px
  width 100%

.decoration
    height 3px
    width 40px
    background-color grey-200
    margin 0 10px 3px 10px

.section-content
  margin 40px 0 0 0

.section-container
  display flex
  left 345px
  position relative
  top 185px
  width calc(100% - 350px)

  .search-page
    .no-match
      display none
  
.section-title
  display inline-flex
  font-weight weight-bold
  padding 0px 0px 15px 0px
  width 100%

  .title-text
    color grey-900
    font-size 64px
  
  .title-section
    color grey-300
    font-size 24px
    height 60px
    padding-left 10px
    position relative
    top 16px
    
.indent-container
  margin 20px 0 60px 50px

@keyframes fadeContentIn
  from
    transform translateY(30px)
    opacity 0
  to
    opacity 1

.divider
  border-top 1px solid grey-200
  margin 0 30px 0x 0
  position relative
  width 90%
  
  sup
    color grey-500
    right -30px
    position: absolute
    top: -10px
  
  label
    color grey-300
    font-weight weight-bold
    position absolute
    right -30px
    top -10px 

section
  // Nothing to see here

.section
  position relative
  width 70vw
  animation fadeContentIn 500ms forwards

.subsection-title
  color grey-900
  font-weight weight-medium
  font-size 24px

.subsection-description
  padding 16px 0px 10px 0px
  font-size-large()
  font-weight weight-default
  max-width 900px
  line-height 24px

.section-nav
  display flex
  flex-direction row
  list-style-type none
  overflow-x scroll
  padding 0 0 30px 0
  position relative
  white-space nowrap
  width 100%

  .nav-item
    color grey-900
    cursor pointer
    font-size-large()
    font-weight weight-medium
    margin 30px 30px 0 0
    padding 10px 30px

    &:hover
      color mp-blue

    &.selected
      background-color mp-blue
      border-radius 30px
      color #FFFFFF

.code-snippet
  max-width 90%
  left -60px
  padding-left 15px
  position relative
  margin-left 50px
  
  .first-call-out
    margin-left -15px
    
.call-out
  color grey-500
  margin 40px 0 20px 0
  font-size-large()
  &.extra
    margin-top 30px
  & > strong
    // text-transform uppercase
  label
    text-transform none
  p
    line-height 4px
    display inline-flex
    text-transform none
    margin 0

  .icon
    font-size 14pt
    position relative
    top -1px
    left -20px
    
.desc
    width 80%
    padding-left 14px
    margin-top 6px
    line-height 24px
          
.first-call-out
  margin-left -10px
    
.snippet-container
  background-color grey-50
  border 1px solid grey-200
  border-radius 6px
  font-size-medium()
  margin-top 10px
  width 90%
  display inline-flex
  flex-direction column

.snippet-header
  color grey-700
  border-bottom 1px solid grey-200
  border-radius 6px 6px 0px 0px
  padding 15px
  margin-right 0
  label
    text-transform uppercase
    letter-spacing 1.2px

.code-field
  background-color white
  border-left 1px solid grey-200
  border-radius 0px 0px 6px 0px
  font-family monospace
  font-weight 500
  margin 0 0 0 45px
  padding 15px
  display inline-flex
  pre
    color grey-900
    display inline-block
    letter-spacing 1.5px
    line-height 20px
    margin -2px 0 0 -45px
    white-space pre-wrap
    &:nth-child(2n)
      overflow scroll
      white-space pre
      margin-left 40px
      width 100%
pre
  span.mp-red
    color mp-red
  span.mp-purple
    color mp-purple
  span.mp-green
    color mp-green
  span.grey-500
    color grey-500
  span.mp-orange
    color mp-orange
      
.common-example
  border 1px dashed grey-300
  border-radius 4px
  min-height 40px
  display inline-flex
  align-items center
  margin 0

.example-block
  display inline-flex
  margin 0 15px 10px 0
  flex-direction column
  &.half
    width 40%
    display inline-table
  
.floating-example-bar
  background #FFFFFF
  width 80%
  box-shadow 0px 8px 22px 0px rgba(0,0,0,0.23)
  padding 15px 20px
  min-width 740px
  margin-top 10px
  &.align-right
    text-align right
  &.blue-bar
    background mp-blue
  &.grey-bar
    background grey-50
  
.blue-vertical-seperator
  border-left 1px solid rgba(255,255,255, .15)
  border-right 1px solid blue-700
  height 48px
  display inline-block
  vertical-align middle
  margin-left 30px
  
.example-card
  background #FFFFFF
  border-radius 6px
  border 1px solid grey-100
  box-shadow 0px 1px 2px 0px rgba(0,0,0,0.14)
  display inline-block
  margin 0 30px 20px 0
  position relative
  min-height 200px
  box-sizing border-box
  &.narrow
    display inline-flex
    width auto
    max-width 30%
    min-width 365px
    align-items flex-end
  &.truncated
    height 90px
    min-height 90px
  &.long
    min-width 560px
    max-width 40%
    
.example-card-footer
    border-top 1px solid grey-200
    position absolute
    bottom 0
    left 0
    right 0
    padding 10px 15px
    text-align right
    :last-child
      margin-left 10px
      
.example-card-header      
  border-bottom 1px solid blue-500
  border-radius 6px 6px 0 0
  position absolute
  top 0
  left -1px
  right -1px
  background-color mp-blue
  text-align center
  color #FFFFFF
  padding 20px 0
  b
    font-size-xl()
  &.grey
    background-color grey-100
    border-bottom 1px solid grey-200
    display flex
    justify-content flex-end
    padding-right 20px

.demo-divider
  border-bottom 1px dashed grey-300
  width 80%
  text-align right
  padding-bottom 15px
  
  a
    margin-left 45px
    
.section-modifier
  margin-top -45px
