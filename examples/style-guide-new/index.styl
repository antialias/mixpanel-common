@import '../../build/stylesheets/defaults/index.css'
@import '../../build/stylesheets/mixins/common.styl'

sup, h1, strong, button, .bold
  font-family family-helvetica
  font-weight weight-bold

.style-guide-title
  color #4C6072
  display flex
  flex-direction row
  font-family family-helvetica
  font-size 24px
  justify-content center
  left 150px
  position relative
  position relative
  top 100px
  width calc(100% - 150px)

.section-container
  display flex
  left 345px
  position relative
  top 185px
  width calc(100% - 350px)
  
.section-title
  display inline-flex
  font-weight weight-bold
  padding 0px 0px 15px 0px
  width 100%

  .title-text
    color #4C6072
    font-size 64px
  
  .title-section
    color #C1CCD5
    font-size 24px
    height 60px
    padding-left 10px
    position relative
    top 16px

@keyframes fadeContentIn
  from
    transform translateY(30px)
    opacity 0
  to
    opacity 1

section
  margin-bottom 50px
  padding-bottom 50px
  border-bottom 1px solid grey-100

.section
  position relative
  width 70vw
  animation fadeContentIn 500ms forwards

.subsection-title
  color #4C6072
  font-family family-helvetica
  font-size 24px

.subsection-description
  padding 16px 0px 45px 0px
  font-family family-helvetica
  font-size 16px

.section-nav
  border-top 1px solid #D8E0E6
  display flex
  flex-direction row
  list-style-type none
  overflow-x scroll
  padding 0 0 30px 0
  position relative
  white-space nowrap
  width 100%

  .nav-item
    color #4C6072
    cursor pointer
    font-family family-helvetica
    font-size 16px
    font-weight weight-medium
    margin 30px 30px 0 0
    padding 10px 30px

    &:hover
      color #4BA8FF

    &.selected
      background-color: #4BA8FF;
      border-radius: 30px;
      color: #FFFFFF;

.code-snippet
  left -60px
  padding-left 15px
  position relative

  .call-out
    color grey-900
    display inline-block
    text-transform uppercase
    &.extra
      margin-top 30px
    & > strong
      margin-left 15px
    label
      text-transform none
    p
      line-height 4px
      margin-left 45px
      text-transform none

  .snippet-container
    background-color grey-50
    border 1px solid grey-200
    border-radius 6px
    font-size 14px
    margin 30px 0 0 45px
    position relative

  .snippet-header
    color grey-700
    border-bottom 1px solid grey-200
    border-radius 6px 6px 0px 0px
    padding 15px
    label
      text-transform uppercase
      letter-spacing 1.2px

  .code-field
    background-color white
    border-left 1px solid grey-200
    border-radius 0px 0px 6px 0px
    font-family monospace
    margin 0 0 0 45px
    padding 15px
    pre
      color grey-900
      display inline-block
      letter-spacing 1.5px
      line-height 20px
      margin -2px 0 0 -45px
      white-space pre-wrap
      &:nth-child(2n)
        margin-left 45px

  pre
    span
      color mp-red
    b
      color grey-900
      font-weight 400
