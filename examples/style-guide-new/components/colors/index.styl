@import '../../../../build/stylesheets/mixins/common.styl'

.color-chips
  display flex
  flex-direction row
  flex-wrap wrap
  margin-top 40px

  .swatch
    background-color #FFFFFF
    border 1px solid grey-150
    border-radius 6px
    display flex
    flex-direction column
    height 250px
    margin 0 30px 45px 0
    width 200px
    box-shadow 0px 2px 4px 0px rgba(0,0,0,0.05)
    -moz-box-shadow 0px 2px 4px 0px rgba(0,0,0,0.05)
    -webkit-box-shadow 0px 2px 4px 0px rgba(0,0,0,0.05)
    
    .swatch-color
      border-radius 6px 6px 0px 0px
      width 100%
      height 180px
    
    .swatch-label
      border-top 1px solid grey-150
      flex-grow 1
      
      .color-name
        display block
        color grey-900
        font-size-xl()
        font-weight weight-medium
        margin 12px 0 0 15px
      
      .color-hex
        color grey-500
        font-size-large()
        margin 3px 0 0 15px

.color-library
  display flex
  flex-direction row
  flex-wrap wrap
  
  .color-group-container
    display flex
    flex-direction column
    width 46%
    min-width 375px
    margin-right 15px
  
    .color-group-title
      color grey-500
      padding 50px 0 10px 0
      font-size-large()

    .color-group
      display flex
      flex-direction column
      flex-grow 1

      .color-segment
        display flex
        flex-direction row
        flex-grow 1
        justify-content space-between
        width 100%

        .color-segment-hex
          color white
          font-size-xl()
          opacity 0.5
          padding 20px

        .color-segment-name
          color white
          padding 20px
          font-size-large()
