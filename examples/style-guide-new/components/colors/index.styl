@import '../../../../build/stylesheets/defaults/index.css'
@import '../../../../build/stylesheets/mixins/common.styl'

.color-chips
  display flex
  flex-direction row
  flex-wrap wrap

  .swatch
    background-color #FFFFFF
    border 1px solid #E5EAEF
    border-radius 6px
    display flex
    flex-direction column
    height 250px
    margin 0 30px 45px 0
    width 200px
    
    .swatch-color
      border-radius 6px 6px 0px 0px
      width 100%
      height 180px
    
    .swatch-label
      border-top 1px solid #E5EAEF
      flex-grow 1
      
      .color-name
        display block
        color #4C6072
        font-size 18px
        margin 12px 0 0 15px
      
      .color-hex
        color #9CACBB
        font-size 16px
        margin 3px 0 0 15px

.color-library
  display flex
  flex-direction row
  flex-wrap wrap
  
  .color-group-container
    display flex
    flex-direction column
    height 400px
    margin-left 5px
    width 30vw
  
    .color-group-title
      color #9CACBB
      padding 50px 0 10px 0

    .color-group
      display flex
      flex-direction column
      flex-grow 1

      .color-segment
        display flex
        flex-direction row
        flex-grow 1
        justify-content space-between
        width 100%

        .color-segment-hex
          color white
          font-size 18px
          opacity 0.5
          padding 20px

        .color-segment-name
          color white
          padding 20px
