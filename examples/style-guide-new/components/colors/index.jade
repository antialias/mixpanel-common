include ../mixins.jade

.section
  .section-title
    .title-text Colors
    .title-section 1.1
  .section-nav
    +section-nav-item('Show All')
    +section-nav-item('Background')
    +section-nav-item('Header')
    +section-nav-item('Border')
    +section-nav-item('Type')
    +section-nav-item('Buttons')
  .divider 
  .section-content
    - const colorGroups = $helpers.getColorGroups()
    section.ui-colors
      .subsection-title Mixpanel UI Colors
      .subsection-description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce id massa et libero condimentum dignissim at ut odio. Aliquam placerat libero metus, et fringilla nisl dictum vitae. Sed at lacus eu risus fermentum consequat.
      .indent-container
        .color-chips
          for color in colorGroups['Mixpanel UI Colors']
            .swatch
              .swatch-color(style={'background-color': COLORS[color]})
              .swatch-label
                .color-name= color
                .color-hex= COLORS[color]
        .code-snippet
          .call-out.first-call-out
            strong.icon +
            strong Example Code
          .snippet-container.min.max
            .snippet-header
              label Stylus
            .code-field
              pre
                | 1
                br
                | 2
                br
                | 3
                br
                | 4
                br
                | 5
              pre
                span.grey-500  /* Color declarations */
                br
                b   color 
                span.mp-red  mp-red
                br
                b   background-color
                span.mp-red  grey-100
                br
                b   border 1px solid
                span.mp-red  blue-700
                br
                b   background-image 
                span.mp-purple linear-gradient(0deg, 
                span.mp-red mp-blue 
                span.mp-purple 0, 
                span.mp-red blue-100 
                span.mp-purple 100%)
    .divider 
      label 1.2
    .section-content
      section.data-viz-colors
      .subsection-title Data Visualization
      .subsection-description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce id massa et libero condimentum dignissim at ut odio. Aliquam placerat libero metus, et fringilla nisl dictum vitae. Sed at lacus eu risus fermentum consequat.
      .indent-container
        .color-chips
          for color in colorGroups['Data Visualization']
            .swatch
              .swatch-color(style={'background-color': COLORS[color]})
              .swatch-label
                .color-name= color
                .color-hex= COLORS[color]
    section.color-library-container
      - const colorLibrary = $helpers.getColorLibraries()
      .divider 
        label 1.3
      .section-content
        section.color-library
      .subsection-title Color Library
      .subsection-description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce id massa et libero condimentum dignissim at ut odio. Aliquam placerat libero metus, et fringilla nisl dictum vitae. Sed at lacus eu risus fermentum consequat.
      .indent-container
        .color-library
          for colorGroup in Object.keys(colorLibrary)
            .color-group-container
              strong.color-group-title= colorGroup
              .color-group
                for color in colorLibrary[colorGroup]
                  .color-segment(style={'background-color': COLORS[color]})
                    .color-segment-hex= COLORS[color]
                    .color-segment-name= color
  