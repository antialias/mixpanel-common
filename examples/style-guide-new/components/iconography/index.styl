@import '../../../../build/stylesheets/mixins/common.styl'

.icons
  display flex
  flex-direction row
  flex-wrap wrap
  margin-top 45px
  
  .icon-large
    height 135px
    svg-icon-style(size: 30px)
    width 135px

  .icon-small
    height 50px
    svg-icon-style(size: 20px)
    width 50px

  .icon
    align-items center
    display flex
    flex-direction row
    justify-content center
    margin 0 20px 50px 0
    padding 0
    position relative
    svg-icon-style(grey-700, blue-100)

    .icon-name
      bottom -30px
      font-size-medium()
      left 5%
      overflow hidden
      position absolute
      text-align center
      text-overflow ellipsis
      white-space nowrap
      width 90%
  
  :hover
    &.icon 
      background #FFFFFF
      border 1px solid mp-blue
      box-shadow 0 2px 4px 0 rgba(0,0,0,0.07)
      color blue-300
      fill blue-300
      
    .icon-name
      color mp-blue
      
.common-example
  border-radius 0px !important

.zoom-toggles
  align-items baseline
  display inline-flex
  flex-direction row-reverse
  list-style-type none
  position relative
  top 1px
  width 89%
  z-index 100
  > li
    margin-left 15px
    padding 15px
  .zoom-selected
    border-bottom 2px solid mp-blue
    color grey-700
    font-weight weight-bold

  .zoom-toggle
    cursor pointer
